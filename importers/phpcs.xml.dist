<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
	<description>The coding standard.</description>

	<file>src/</file>
	<file>tests/</file>

	<!-- Do not print warnings -->
	<arg value="n"/>
	<arg name="basepath" value="."/>
	<arg name="cache" value=".phpcs-cache"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<rule ref="PSR2"/>
</ruleset>
