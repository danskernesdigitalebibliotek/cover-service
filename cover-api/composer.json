{
    "name": "danskernesdigitalebibliotek/ddb-cover-service",
    "description": "Interactive cover service for danish libraries",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-amqp": "*",
        "ext-apcu": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-zend-opcache": "*",
        "api-platform/api-pack": "^1.1",
        "danskernesdigitalebibliotek/agency-auth-bundle": "^2.0",
        "itk-dev/metrics-bundle": "^0.0.1",
        "predis/predis": "^1.1",
        "ruflin/elastica": "^7.1",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/http-client": "4.4.*",
        "symfony/messenger": "4.4.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/process": "^4.0",
        "symfony/proxy-manager-bridge": "^4.0",
        "symfony/security-bundle": "4.4.*",
        "symfony/translation": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "behatch/contexts": "^3.3",
        "dvdoug/behat-code-coverage": "^5.2",
        "escapestudios/symfony2-coding-standard": "^3.10",
        "fakerphp/faker": "^1.14",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/symfony-extension": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.13",
        "friendsoftwig/twigcs": "^3.2",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "^4.4",
        "symfony/debug-pack": "^1.0",
        "symfony/maker-bundle": "^1.17",
        "symfony/phpunit-bridge": "^5.3",
        "vimeo/psalm": "^4.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-coding-standards/php-cs-fixer": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "check-coding-standards/twigcs": [
            "twigcs lint templates"
        ],
        "coding-standards-check": [
            "@check-coding-standards/php-cs-fixer",
            "@check-coding-standards/twigcs"
        ],
        "coding-standards-apply": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "behat": [
            "./vendor/bin/behat"
        ],
        "test-suite": [
            "@phpunit",
            "@behat"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
